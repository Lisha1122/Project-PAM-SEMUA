<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#2C67A2">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="Back to previous screen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Contact Info"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Profile Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <ImageView
                android:id="@+id/img_profile_detail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:src="@tools:sample/avatars"
                android:contentDescription="Profile picture" />

            <TextView
                android:id="@+id/tv_name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Kiara"
                android:textColor="#333333"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_phone_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="+6285667897112"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Call and Message Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <!-- Call Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_call"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bground"
                    android:src="@android:drawable/ic_menu_call"
                    android:contentDescription="Make a call" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Call"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Message Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btn_message"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bground"
                    android:src="@android:drawable/ic_menu_send"
                    android:contentDescription="Send message" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Message"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Location Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_mylocation"
                android:contentDescription="Location icon" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Jakarta, Indonesia"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Social Media Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/btn_telegram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00796B"
                android:drawableStart="@android:drawable/ic_menu_send"
                android:gravity="start|center_vertical"
                android:padding="12dp"
                android:text="Telegram"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_whatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1B5E20"
                android:drawableStart="@android:drawable/ic_menu_send"
                android:gravity="start|center_vertical"
                android:padding="12dp"
                android:text="WhatsApp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Share and Delete Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/btn_share_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#616161"
                android:drawableStart="@android:drawable/ic_menu_share"
                android:gravity="start|center_vertical"
                android:padding="12dp"
                android:text="Share contact"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D1CACA"
                android:drawableStart="@android:drawable/ic_menu_delete"
                android:gravity="start|center_vertical"
                android:padding="12dp"
                android:textStyle="bold"
                android:text="Delete"
                android:textColor="#8B1F2D" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
